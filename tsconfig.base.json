{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@debrie-workspace/source"],
    "paths": {
      "@debrie/core": ["libs/core/src/index.ts"],
      "@debrie/core/*": ["libs/core/src/*"],
      "@debrie/pii": ["libs/pii/src/index.ts"],
      "@debrie/pii/*": ["libs/pii/src/*"],
      "@debrie/sentiment": ["libs/sentiment/src/index.ts"],
      "@debrie/sentiment/*": ["libs/sentiment/src/*"]
    }
  }
}
